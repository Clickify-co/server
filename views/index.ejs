  <div class="quickshrink mt-5 pb-5">
    <form action="/createShort" method="POST" class="container p-5 pb-2 form-inline">
      <label for="fullURL" class="sr-only">URL</label>
      <input type="url" name="fullURL" placeholder="Shrink your URL now" class="form-control form-control-lg mr-2 col" required id="fullURL">
      <button type="submit" class="btn btn-lg btn-danger">Shrink</button>
    </form>
      <% if(messages.shortURL) {%> 
        <div class="container bg-white p-3" id="generatedLink">
          <div class="row">
            <div class="col-md-8 d-flex align-items-center justify-content-start">
              <%= messages.fullURL %> 
            </div>
            <div class="col-md-4 d-flex align-items-center justify-content-end">
              <a href="http://localhost:5500/<%= messages.shortURL %>" id="shortURL">http://localhost:5500/<%=messages.shortURL  %> </a>
              <button id="copybtn"  data-clipboard-target="#shortURL" class="btn btn-outline-primary ml-2">Copy</button>
            </div>
          </div>
        </div>
      <% } %> 
    
  </div>
  <div id="About" class="section-1 text-center p-5 container">
    <h1 class="font-weight-bold">
      Increase the numbers of lead you generate.
